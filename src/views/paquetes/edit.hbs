<div class="col-md-4 mx-auto mt-lg-3">
    <div class="card">
        <div class="card-body">
            <form action="/links/edit/{{links.id}}" method="POST">
                <div class="form-group mb-2">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{links.title}}" autofocus>
                </div>
                <div class="form-group mb-2">
                    <textarea name="description" rows="2" class="form-control" placeholder="Description">{{links.description}}</textarea>
                </div>
                <div class="form-group mb-2">
                    <button class="btn btn-success w-100">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
